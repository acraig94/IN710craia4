@model DogSelector.Models.Dog

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>NewDogForm</title>
</head>
<body>
    <div>
        <form action="SelectedDog" method="post">
            <p>Must be good with children</p>
            <input type="radio" name="goodWithChildren" value="true" Checked> Yes<br>
            <input type="radio" name="goodWithChildren" value="false"> No<br>
            <br>
            <p>Drooling</p>
            <input type="radio" name="drools" value="true" Checked> No Slobbering<br>
            <input type="radio" name="drools" value="false"> Don't Mind<br>
            <br>
            <p>Coat Length</p>
            <input type="radio" name="coatlength" value="Short"Checked> Short<br>
            <input type="radio" name="coatlength" value="Medium"> Medium<br>
            <input type="radio" name="coatlength" value="Long"> Long<br>
            <br>
            <p>Preferences</p>
            <table>
                <tr>
                    <th></th>
                    <th>Low</th>
                    <th>Medium</th>
                    <th>High</th>
                    <th>No Preference</th>
                </tr>
                <tr>
                    <td>Activity Level</td>
                    <td><input type="radio" name="activityLevel" value="Low" Checked></td>
                    <td><input type="radio" name="activityLevel" value="Medium"></td>
                    <td><input type="radio" name="activityLevel" value="High"></td>
                    <td><input type="radio" name="activityLevel" value="NoPreference"></td>
                </tr>
                <tr>
                    <td>Shedding Level</td>
                    <td><input type="radio" name="sheddingLevel" value="Short" Checked></td>
                    <td><input type="radio" name="sheddingLevel" value="Medium"></td>
                    <td><input type="radio" name="sheddingLevel" value="High"></td>
                    <td><input type="radio" name="sheddingLevel" value="NoPreference"></td>
                </tr>
                <tr>
                    <td>Grooming Level</td>
                    <td><input type="radio" name="groomingLevel" value="Low" Checked></td>
                    <td><input type="radio" name="groomingLevel" value="Medium"></td>
                    <td><input type="radio" name="groomingLevel" value="High"></td>
                    <td><input type="radio" name="groomingLevel" value="NoPreference"></td>
                </tr>
                <tr>
                    <td>Intelligence Level</td>
                    <td><input type="radio" name="intelligenceLevel" value="Short" Checked></td>
                    <td><input type="radio" name="intelligenceLevel" value="Medium"></td>
                    <td><input type="radio" name="intelligenceLevel" value="High"></td>
                    <td><input type="radio" name="intelligenceLevel" value="NoPreference"></td>
                </tr>
            </table>
            <br>
            <select name="size">
                <option value="Small">Small</option>
                <option value="Medium">Medium</option>
                <option value="Large">Large</option>
            </select>
            <input type="submit" value="Add New Dog" />

        </form>

    </div>

</body>
</html>

